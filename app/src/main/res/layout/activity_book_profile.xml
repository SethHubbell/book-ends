<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bookends.BookProfileActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/book_title"
        android:textSize="40sp"
        android:text="@string/book_title"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:background="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/ibsn"
        android:textSize="15dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:background="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/review"
        android:textSize="30sp"
        android:textAllCaps="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/title_profile">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

            <TextView
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:textSize="30dp"
                    android:id="@+id/liked"
                    android:text="@string/dynamic_liked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:textSize="30dp"
                    android:id="@+id/recommend"
                    android:text="@string/dynamic_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:textSize="30dp"
                    android:id="@+id/sadscale"
                    android:text="@string/sadscale"
                    android:background="@android:color/holo_blue_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recommend"/>

            <TextView
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:textSize="40dp"
                    android:id="@+id/genres"
                    android:text="@string/genres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sadscale"/>

            <TextView
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:textSize="40dp"
                    android:id="@+id/triggers"
                    android:text="@string/triggers"
                    android:background="@android:color/holo_blue_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genres"/>

            <TextView
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:textSize="40dp"
                    android:id="@+id/another"
                    android:text="@string/triggers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/triggers"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_profile">

        <TextView
            android:id="@+id/author"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:textSize="25sp"
            android:text="@string/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:background="@android:color/holo_blue_light" />

    </RelativeLayout>


</LinearLayout>
