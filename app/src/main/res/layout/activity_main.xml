<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/dottedtop"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@drawable/dotted" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/dottedtop"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/header">

        <ImageView
            android:id="@+id/logoleft"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/logoleft" />

        <TextView
            android:id="@+id/title"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:paddingTop="10dp"
            android:textSize="57dp"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="43dp"
            android:layout_height="50dp"
            android:src="@drawable/logo" />

    </LinearLayout>


    <ImageView
        android:layout_below="@id/header"
        android:id="@+id/dotted"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@drawable/dotted" />

    <!--<TextView-->
        <!--android:paddingBottom="20dp"-->
        <!--android:textSize="30dp"-->
        <!--android:id="@+id/would"-->
        <!--android:text="@string/would"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/title"/>-->

    <Button
        android:id="@+id/scan"
        android:text="@string/scan"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/dotted"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/search"
        android:text="@string/search"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/scan"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/explore"
        android:text="@string/explore"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/search"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"/>

</RelativeLayout>
